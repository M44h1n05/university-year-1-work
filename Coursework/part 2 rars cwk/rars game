.data
prompt: .string "Guess the number (between 1 and 10): "
toolow: .string "Too low! Try again.\n"
toohigh: .string "Too high! Try again.\n"
correct: .string "Congratulations! You guessed the correct number.\n"
newline: .string "\n"

.text
.globl _start

_start:
    # Seed the random number generator (you can use a different seed)
    li a0, 42
    li a1, 0
    li a2, 10
    li a7, 32  # syscall number for get random number
    ecall

    # Random number is now in a0
    addi a0, a0, 1  # Ensure the random number is between 1 and 10

game_loop:
    # Ask the user to guess the number
    li a7, 4
    la a0, prompt
    ecall

    # Read user input
    li a7, 5
    ecall

    # Convert the user input to an integer
    li a7, 10
    ecall

    # Check if the guess is correct
    bne a0, a1, check_guess

    # Display congratulations message and exit
    li a7, 4
    la a0, correct
    ecall

    li a7, 10
    ecall

    j _start  # Restart the game

check_guess:
    # Check if the guess is too low
    blt a0, a1, too_low

    # Check if the guess is too high
    bgt a0, a1, too_high

    # Display congratulations message and exit
    li a7, 4
    la a0, correct
    ecall

    li a7, 10
    ecall

    j _start  # Restart the game

too_low:
    # Display too low message
    li a7, 4
    la a0, toolow
    ecall

    j game_loop

too_high:
    # Display too high message
    li a7, 4
    la a0, toohigh
    ecall

    j game_loop
